---
import { getProducts } from "../../lib/woocommerce";

// src/pages/index.astro

const data = await getProducts();
const products = data.products.nodes;
---

<div class="products-widget">
    <h2>Productos</h2>
    <ul>
        {
            products.map((product: any) => (
                <li>
                    <h3>{product.name}</h3>
                    <p>{product.description}</p>
                    <p>{product.price}</p>
                </li>
            ))
        }
    </ul>
</div>
