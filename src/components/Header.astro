<style>
    header {
        padding: 0rem;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        z-index: 100;
        color: white;
        background: #e7e7e766;
        backdrop-filter: blur(10px);
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .container-header {
        max-width: 1593px;
        width: 100%;
        margin: auto;
        height: 60px;
        display: flex;
        justify-content: center;
        color: var(--primary);
        justify-content: space-between;
        align-items: center;
        position: relative;
    }

    .logo {
    }

    .logo img {
        margin: auto;
        height: 25px;
    }

    .menu {
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        font-weight: 700;
    }

    .nav-menu {
        display: flex;
        color: white;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 1.1rem;
    }

    .nav-menu > li {
        padding: 0 15px;
        cursor: pointer;
        height: 60px;
        display: flex;
        align-items: center;
        transition: all 0.2s ease;
    }

    .nav-menu > li > div {
        position: absolute;
        top: 100%;
        left: 0;
        max-width: 1593px;
        width: 100vw;
        background-color: white;
        padding: 1rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        z-index: 100;
        opacity: 0;
        visibility: hidden;
        transition: all 0.4s ease-in-out;
        transform: translateY(-10px);
        color: var(--primary);
        padding: 2rem;
    }

    .nav-menu > li:hover {
        background-color: rgba(255, 255, 255, 0.2);
    }

    .nav-menu > li:hover > div {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .submenu.almohadas {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 3rem 0rem;
    }

    .submenu.almohadas .item-submenu {
        display: flex;
        gap: 0.7rem;
    }

    .submenu.almohadas .item-submenu.item-submenu-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .submenu.almohadas .item-submenu.item-submenu-buttons > a {
        padding: 1rem;
        background-color: var(--primary);
        color: white;
        font-size: 0.9rem;
        border-radius: 1rem;
        text-align: center;
    }

    .submenu.almohadas .item-submenu.item-submenu-buttons > a:last-child {
        background-color: transparent;
        border: 2px solid var(--primary);
        color: var(--primary);
    }

    .submenu.almohadas .item-submenu > img {
        width: 115px;
        aspect-ratio: 1;
        border-radius: 1rem;
    }

    .submenu.almohadas .item-submenu > div {
        display: flex;
        flex-direction: column;
        cursor: default;
        gap: 0.2rem;
    }

    .submenu.almohadas .item-submenu > div > h3 {
        font-size: 1.5rem;
    }

    .submenu.almohadas .item-submenu > div > ul {
        display: flex;
        flex-direction: column;
    }

    .submenu.almohadas .item-submenu > div > ul > li {
        list-style: none;
    }

    .submenu.almohadas .item-submenu > div > ul > li > a {
        font-size: 0.9rem;
    }
    .submenu.almohadas .item-submenu > div > ul > li > a:hover {
        text-decoration: underline;
    }

    .nav-menu > li > div.submenu.idiomas {
        width: 150px !important;
        height: 100px;
        left: auto;
        padding: 1rem;
        right: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .nav-menu > li > div.submenu.idiomas > a {
        font-size: 1rem;
        cursor: pointer;
    }

    .nav-menu > li > div.submenu.idiomas > a:hover {
        text-decoration: underline;
    }

    .nav-menu > li > div.submenu.simple {
        width: 50vw !important;
        left: auto;
        right: 0;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .nav-menu > li > div.submenu.simple > a {
        font-size: 1rem;
        cursor: pointer;
        text-align: center;
    }
</style>
